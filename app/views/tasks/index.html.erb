<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Named price</th>
    <th>City</th>
    <th>Description</th>
    <th>Private description</th>
    <th>Cost in cents</th>
    <th>Virtual</th>
    <th>Assignment Type</th>
    <th>Number runners to fill</th>
    <th>Complete by time</th>
    <th>Assign by time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.named_price %></td>
    <td><%= task.city_id %></td>
    <td><%= task.description %></td>
    <td><%= task.private_description %></td>
    <td><%= task.cost_in_cents %></td>
    <td><%= task.virtual %></td>
    <td><%= task.assignment_type %></td>
    <td><%= task.number_runners_to_fill %></td>
    <td><%= task.complete_by_time %></td>
    <td><%= task.assign_by_time %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

